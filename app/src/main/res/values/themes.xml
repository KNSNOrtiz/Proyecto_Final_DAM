<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAnimection" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_greenish</item>
        <item name="colorPrimaryVariant">@color/blue_neon</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_cornflower</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_dark</item>
        <item name="colorAccent">@color/white</item>
        <item name="materialButtonStyle">@style/AniButton</item>
        <item name="editTextStyle">@style/AniEditText</item>
        <item name="android:textViewStyle">@style/AniTextAppearance</item>
    </style>

    <style name="AniTextAppearance" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AniButton" parent="android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold_italic</item>
        <item name="android:background">@drawable/roundbutton</item>
        <item name="android:padding">8dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AniEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/roundedittext</item>
        <item name="android:editable">true</item>
        <item name="android:hint">Texto de ejemplo</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/blue_dark</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="Theme.MyAnimection.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyAnimection.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyAnimection.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>